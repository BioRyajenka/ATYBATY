<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <ImageView
                android:id="@+id/iv_work_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_arrow_back_white"
                android:padding="12dp"/>

        <TextView
                android:id="@+id/tv_work_title"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="26sp"
                android:gravity="center"
                tools:text="Настройка работы"/>

        <ImageView
                android:id="@+id/iv_work_save"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_check_white"
                android:padding="12dp"/>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:text="@string/start_time_title"
                    android:layout_marginTop="8dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                <ImageView
                        android:id="@+id/iv_work_starttime_minus"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_left_white"
                        android:padding="12dp"/>

                <EditText
                        android:id="@+id/et_work_starttime_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:text="30"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>

                <ImageView
                        android:id="@+id/iv_work_starttime_add"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_right_white"
                        android:padding="12dp"/>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:text="Работа"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:id="@+id/tv_work_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimary"
                    android:padding="16dp"
                    android:gravity="center"
                    android:text="Длительность работы изменена для разных циклов"
                    android:visibility="gone"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                <ImageView
                        android:id="@+id/iv_work_time_minus"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_left_white"
                        android:padding="12dp"/>

                <EditText
                        android:id="@+id/et_work_time_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:text="30"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>

                <ImageView
                        android:id="@+id/iv_work_time_add"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_right_white"
                        android:padding="12dp"/>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:text="Отдых"
                    android:layout_marginTop="8dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                <ImageView
                        android:id="@+id/iv_work_relaxtime_minus"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_left_white"
                        android:padding="12dp"/>

                <EditText
                        android:id="@+id/et_work_relaxtime_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:text="30"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>

                <ImageView
                        android:id="@+id/iv_work_relaxtime_add"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_right_white"
                        android:padding="12dp"/>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:text="Циклы"
                    android:layout_marginTop="8dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                <ImageView
                        android:id="@+id/iv_work_repeats_minus"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_left_white"
                        android:padding="12dp"/>

                <EditText
                        android:id="@+id/et_work_repeats_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:text="30"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>

                <ImageView
                        android:id="@+id/iv_work_repeats_add"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chevron_right_white"
                        android:padding="12dp"/>

            </LinearLayout>



            <TextView
                    android:id="@+id/tv_work_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="Детальная настройка"
                    android:padding="16dp"
                    android:background="@drawable/rounded_bg"
                    android:layout_margin="16dp"
                    android:gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>