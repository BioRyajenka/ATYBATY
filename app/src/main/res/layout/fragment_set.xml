<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark"
              android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary">

        <ImageView
                android:id="@+id/iv_set_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_white"
                android:padding="12dp"/>

        <TextView
                android:id="@+id/tv_set_title"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="26sp"
                android:gravity="center"
                tools:text="Сет 1"/>

        <ImageView
                android:id="@+id/iv_set_save"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check_white"
                android:padding="12dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_set_exercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="8dp"
            tools:listitem="@layout/item_exercise_work"/>

    <TextView
            android:id="@+id/tv_set_default_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Вернуть исходные настройки"
            android:padding="16dp"
            android:background="@drawable/rounded_bg"
            android:layout_margin="8dp"
            android:gravity="center"/>


</LinearLayout>