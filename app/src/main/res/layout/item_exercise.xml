<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:background="@color/colorPrimaryDark"
              android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/et_exercise_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:text="Работа"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"/>

        <ImageView
                android:id="@+id/iv_exercise_delete"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_clear_white"
                android:padding="12dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

        <ImageView
                android:id="@+id/iv_exercise_minus"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_chevron_left_white"
                android:padding="12dp"/>

        <EditText
                android:id="@+id/et_exercise_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:text="30"
                android:inputType="number"
                android:background="@android:color/transparent"/>

        <ImageView
                android:id="@+id/iv_exercise_plus"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_chevron_right_white"
                android:padding="12dp"/>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_exercise_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            tools:text="Интервалы: 30 сек"/>

    <TextView
            android:id="@+id/tv_exercise_acceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            tools:text="Ускорение: 30 сек"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/tv_exercise_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Настроить работу"
            android:padding="16dp"
            android:background="@drawable/rounded_bg"
            android:layout_margin="8dp"
            android:gravity="center"/>

</LinearLayout>